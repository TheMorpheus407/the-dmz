{
  "name": "@the-dmz/shared",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./types": {
      "types": "./dist/esm/types/index.d.ts",
      "import": "./dist/esm/types/index.js",
      "require": "./dist/cjs/types/index.js"
    },
    "./constants": {
      "types": "./dist/esm/constants/index.d.ts",
      "import": "./dist/esm/constants/index.js",
      "require": "./dist/cjs/constants/index.js"
    },
    "./schemas": {
      "types": "./dist/esm/schemas/index.d.ts",
      "import": "./dist/esm/schemas/index.js",
      "require": "./dist/cjs/schemas/index.js"
    },
    "./utils": {
      "types": "./dist/esm/utils/index.d.ts",
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.js"
    }
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run generate:schemas && pnpm run build:esm && pnpm run build:cjs && pnpm run build:cjs:package",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:cjs:package": "node -e \"const fs = require('node:fs'); fs.mkdirSync('dist/cjs', { recursive: true }); fs.writeFileSync('dist/cjs/package.json', JSON.stringify({ type: 'commonjs' }, null, 2));\"",
    "dev": "pnpm run generate:schemas && tsc -p tsconfig.esm.json --watch",
    "generate:schemas": "tsx scripts/generate-json-schemas.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm run generate:schemas && vitest run",
    "test:watch": "pnpm run generate:schemas && vitest",
    "test:coverage": "pnpm run generate:schemas && vitest run --coverage",
    "typecheck": "pnpm run generate:schemas && tsc -p tsconfig.json --noEmit",
    "clean": "node -e \"const fs = require('node:fs'); fs.rmSync('dist', { recursive: true, force: true });\""
  },
  "dependencies": {
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.5.4",
    "vitest": "^4.0.18"
  }
}
