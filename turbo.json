{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".svelte-kit/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["WEB_PORT", "API_PORT", "PORT", "VITE_API_URL"]
    },
    "lint": {
      "dependsOn": [
        "openapi:check",
        "contract:parity",
        "jwks-contract:check",
        "error-contract:check",
        "event-contract:check",
        "log-contract:check",
        "lint:contracts",
        "lint:data-boundaries",
        "lint:hook-chain",
        "lint:db-tenant-context",
        "test:ui-contract"
      ],
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "lint:architecture": {
      "outputs": []
    },
    "lint:data-boundaries": {
      "outputs": []
    },
    "lint:hook-chain": {
      "outputs": []
    },
    "lint:db-tenant-context": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build", "test:isolation"],
      "outputs": ["coverage/**"]
    },
    "test:isolation": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:a11y": {
      "cache": false,
      "outputs": ["playwright-report/**"]
    },
    "typecheck": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "storybook:build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"],
      "inputs": [".storybook/**", "src/**"]
    },
    "openapi:generate": {
      "dependsOn": ["^build"],
      "outputs": ["openapi/**"],
      "inputs": ["src/**", "scripts/**"]
    },
    "openapi:check": {
      "dependsOn": ["openapi:generate"],
      "outputs": [],
      "inputs": ["openapi/**", "src/**", "scripts/**"]
    },
    "contract:parity": {
      "dependsOn": ["openapi:generate"],
      "outputs": [],
      "inputs": ["openapi/**", "../packages/shared/src/contracts/**", "../apps/web/src/lib/api/**"]
    },
    "jwks-contract:check": {
      "outputs": [],
      "inputs": [
        "../packages/shared/src/contracts/**",
        "src/modules/auth/jwks.routes.ts",
        "src/modules/auth/jwt-keys.service.ts"
      ]
    },
    "error-contract:check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "../packages/shared/src/constants/error-codes.ts",
        "../apps/api/src/shared/middleware/error-handler.ts",
        "../apps/web/src/lib/api/error-mapper.ts",
        "../apps/web/src/lib/api/error-copy.ts"
      ]
    },
    "event-contract:check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "../packages/shared/src/contracts/event-manifest.ts",
        "../apps/api/src/modules/auth/auth.events.ts",
        "../apps/api/scripts/check-event-contract.ts"
      ]
    },
    "log-contract:check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "../packages/shared/src/contracts/logging-manifest.ts",
        "../apps/api/src/shared/middleware/request-logger.ts",
        "../apps/api/src/app.ts",
        "../apps/api/src/shared/middleware/error-handler.ts",
        "../apps/api/scripts/check-logging-contract.ts"
      ]
    },
    "lint:contracts": {
      "outputs": []
    },
    "test:security-headers-contract": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    },
    "check:tokens": {
      "cache": false,
      "outputs": []
    },
    "test:ui-contract": {
      "cache": false,
      "outputs": []
    }
  }
}
