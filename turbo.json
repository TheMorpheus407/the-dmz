{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".svelte-kit/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["WEB_PORT", "API_PORT", "PORT", "VITE_API_URL"]
    },
    "lint": {
      "dependsOn": ["openapi:check", "contract:parity", "error-contract:check"],
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "lint:architecture": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build", "test:isolation"],
      "outputs": ["coverage/**"]
    },
    "test:isolation": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:a11y": {
      "cache": false,
      "outputs": ["playwright-report/**"]
    },
    "typecheck": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "storybook:build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"],
      "inputs": [".storybook/**", "src/**"]
    },
    "openapi:generate": {
      "dependsOn": ["^build"],
      "outputs": ["openapi/**"],
      "inputs": ["src/**", "scripts/**"]
    },
    "openapi:check": {
      "dependsOn": ["openapi:generate"],
      "outputs": [],
      "inputs": ["openapi/**", "src/**", "scripts/**"]
    },
    "contract:parity": {
      "dependsOn": ["openapi:generate"],
      "outputs": [],
      "inputs": ["openapi/**", "../packages/shared/src/contracts/**", "../apps/web/src/lib/api/**"]
    },
    "error-contract:check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "../packages/shared/src/constants/error-codes.ts",
        "../apps/api/src/shared/middleware/error-handler.ts",
        "../apps/web/src/lib/api/error-mapper.ts",
        "../apps/web/src/lib/api/error-copy.ts"
      ]
    },
    "check:tokens": {
      "cache": false,
      "outputs": []
    }
  }
}
