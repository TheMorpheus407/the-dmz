# Auto-detect text files and normalize line endings
* text=auto

# Force LF line endings for all text files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.html text eol=lf
*.svelte text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.sh text eol=lf
*.sql text eol=lf
*.toml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary

# Export ignore
.idea/ export-ignore
.vscode/ export-ignore
