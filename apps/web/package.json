{
  "name": "@the-dmz/web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "lint": "eslint . --max-warnings=0",
    "test": "node ./scripts/verify-shared-import.mjs && node ./scripts/verify-scaffold.mjs && vitest run",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.json --noEmit",
    "clean": "node -e \"const fs = require('node:fs'); fs.rmSync('.svelte-kit', { recursive: true, force: true }); fs.rmSync('build', { recursive: true, force: true });\""
  },
  "dependencies": {
    "@the-dmz/shared": "workspace:*"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^2.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "svelte": "^5.0.0",
    "svelte-check": "^3.6.0",
    "typescript": "^5.5.4",
    "vite": "^6.3.0",
    "vitest": "^2.1.0"
  }
}
