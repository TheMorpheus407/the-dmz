{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["svelte", "vite/client"],
    "baseUrl": ".",
    "rootDirs": ["./src", "./.svelte-kit/types"],
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$api": ["src/lib/api"],
      "$api/*": ["src/lib/api/*"],
      "$ui": ["src/lib/ui"],
      "$ui/*": ["src/lib/ui/*"],
      "$stores": ["src/lib/stores"],
      "$stores/*": ["src/lib/stores/*"],
      "$utils": ["src/lib/utils"],
      "$utils/*": ["src/lib/utils/*"],
      "$game": ["src/lib/game"],
      "$game/*": ["src/lib/game/*"]
    },
    "isolatedModules": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "vite.config.ts",
    "svelte.config.js"
  ],
  "exclude": ["node_modules", ".svelte-kit", "build"]
}
