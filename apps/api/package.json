{
  "name": "@the-dmz/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "predev": "node -e \"const n=require('net'),r=process.env.API_PORT||process.env.PORT||'3001',p=Number(r);if(!Number.isInteger(p)||p<1||p>65535){console.error('Invalid port: '+r+'. Expected integer 1-65535.');process.exit(1)}const s=n.createServer();s.once('error',()=>{console.error('Port '+p+' in use');process.exit(1)});s.listen(p,()=>s.close())\"",
    "dev": "node --watch --import tsx src/server.ts",
    "start": "node dist/server.js",
    "lint": "tsx scripts/validate-modules.ts && tsx scripts/validate-data-boundaries.ts && tsx scripts/validate-event-boundaries.ts && tsx scripts/validate-route-boundaries.ts && tsx scripts/validate-schema-boundaries.ts && tsx scripts/validate-api-versioning.ts && tsx scripts/validate-redis-keyspace.ts && tsx scripts/validate-db-tenant-context.ts src && eslint .",
    "lint:fix": "eslint . --fix",
    "lint:architecture": "eslint . --quiet --rule 'import-x/no-cycle:error' --rule 'import-x/no-restricted-paths:error'",
    "lint:modules": "tsx scripts/validate-modules.ts",
    "lint:data-boundaries": "tsx scripts/validate-data-boundaries.ts",
    "lint:event-boundaries": "tsx scripts/validate-event-boundaries.ts",
    "lint:route-boundaries": "tsx scripts/validate-route-boundaries.ts",
    "lint:schema-boundaries": "tsx scripts/validate-schema-boundaries.ts",
    "lint:api-versioning": "tsx scripts/validate-api-versioning.ts",
    "lint:hook-chain": "tsx scripts/validate-hook-chain.ts",
    "lint:redis-keyspace": "tsx scripts/validate-redis-keyspace.ts",
    "lint:db-tenant-context": "tsx scripts/validate-db-tenant-context.ts src",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "tsx src/shared/database/migrate.ts",
    "db:smoke": "tsx src/shared/database/smoke.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "db:seed": "tsx src/shared/database/seed.ts",
    "db:seed:test": "tsx src/shared/database/seed-test.ts",
    "db:seed:m1": "tsx src/shared/database/seed-m1.ts",
    "db:reset": "tsx src/shared/database/reset.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:isolation": "vitest run --testNamePattern tenant-isolation",
    "test:tenant-context": "vitest run --testNamePattern tenant-context",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "node -e \"const fs = require('node:fs'); fs.rmSync('dist', { recursive: true, force: true });\"",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "openapi:check": "tsx scripts/check-openapi.ts",
    "contract:parity": "tsx scripts/check-contract-parity.ts",
    "event-contract:check": "tsx scripts/check-event-contract.ts",
    "log-contract:check": "tsx scripts/check-logging-contract.ts",
    "rate-limit-contract:check": "tsx scripts/check-rate-limit-contract.ts",
    "jwks-contract:check": "tsx scripts/check-jwks-contract.ts",
    "test:rate-limit-contract": "vitest run --config vitest.rate-limit-contract.config.ts",
    "test:log-contract": "vitest run --config vitest.log-contract.config.ts",
    "test:auth-abuse-contract": "vitest run --config vitest.auth-abuse-contract.config.ts",
    "test:password-policy-contract": "vitest run --config vitest.password-policy-contract.config.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@the-dmz/shared": "workspace:*",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.33.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "jose": "^6.1.3",
    "postgres": "^3.4.5",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/argon2": "^0.15.4",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.24.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.4",
    "vitest": "^4.0.18"
  }
}
